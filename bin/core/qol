#!/usr/bin/env bash

# This script installs the symlinks from the modules in src/
# to the bin/ directory.

if [ "$1" == "install" ]; then

    if [ "$#" -lt 2 ]; then
    echo "Error: Two arguments are required."
    echo "Usage: $0 install <app>"
    exit 1
    fi

    echo "it runs"

elif [ "$1" == "list" ]; then

   ls -1 "$QOL_SCRIPTS_PATH/src"

else
   echo "Usage: $0 install <app> - Installs a candidate script"
   echo "       $0 list - shows scripts to install"

fi